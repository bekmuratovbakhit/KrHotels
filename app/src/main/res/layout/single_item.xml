<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="20dp"
    app:cardMaxElevation="30dp"
    app:cardPreventCornerOverlap="true"
    android:layout_margin="3dp"
    android:id="@+id/item_layout">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/item_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:scaleType="fitXY"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:src="@drawable/neo" />


        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/item_image"
            android:text="Neo"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:drawableStart="@drawable/ic_baseline_star_24"
            android:layout_toEndOf="@id/item_name"
            android:textSize="12sp"
            android:text="5"
            android:drawableTint="@color/yellow"

             />

        <TextView
            android:id="@+id/item_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/item_image"
            android:drawableStart="@drawable/ic_baseline_location_on_24"
            android:drawablePadding="2dp"
            android:drawableTint="@color/black"
            android:text="1.5 km"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_name"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/item_distance"

            android:lines="2"
            android:maxLines="2"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/item_duration_driving"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_address"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/item_image"
            android:drawableStart="@drawable/ic_baseline_time_to_leave_24"
            android:drawablePadding="2dp"
            android:drawableTint="@color/black"
            android:text="06:00 min"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_duration_walking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_address"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/item_duration_driving"
            android:drawableStart="@drawable/ic_baseline_directions_walk_24"
            android:drawablePadding="2dp"
            android:drawableTint="@color/black"
            android:text="15:00 min"
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>