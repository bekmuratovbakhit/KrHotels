<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="20dp"
    app:cardMaxElevation="30dp"
    app:cardPreventCornerOverlap="true"
    android:layout_margin="3dp"
    android:id="@+id/item_layout">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/shimmer_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:contentDescription="@string/app_name"
            android:padding="5dp"
            android:scaleType="fitXY"
            android:background="#B3B3B3" />


        <TextView
            android:id="@+id/shimmer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/shimmer_image"
            android:background="#B3B3B3"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:text="            "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/shimmer_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:layout_toEndOf="@id/shimmer_name"
            android:textSize="12sp"
            android:background="#B3B3B3"
            android:drawableTint="@color/yellow"

            />

        <TextView
            android:id="@+id/shimmer_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/shimmer_name"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/shimmer_image"
            android:background="#B3B3B3"
            android:drawableTint="@color/black"
            android:text="       "
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/item_address"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/shimmer_name"
            android:layout_marginStart="2dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/shimmer_distance"
            android:background="#B3B3B3"
            android:text="       "
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />





        <TextView
            android:id="@+id/shimmer_duration"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_address"
            android:layout_marginStart="2dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/shimmer_image"
            android:background="#B3B3B3"
            android:drawableTint="@color/black"
            android:text="           "
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/item_address"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/shimmer_duration"
            android:background="#B3B3B3"
            android:drawableTint="@color/black"
            android:text="       "
            android:textColor="@color/black"
            android:textSize="10sp"
            android:textStyle="bold" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>